
#include <stdio.h>

#define TAM 10
#define HAB 5

void imprimirTabuleiro(int tabuleiro[TAM][TAM]) {
    for (int i = 0; i < TAM; i++) {
        for (int j = 0; j < TAM; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }
}

int main() {

    int tabuleiro[TAM][TAM] = {0}; 

    // Colocando alguns navios (valor 3) apenas para exemplo
    tabuleiro[2][3] = 3;
    tabuleiro[5][7] = 3;
    tabuleiro[9][1] = 3;

    int cone[HAB][HAB];
    int cruz[HAB][HAB];
    int octaedro[HAB][HAB];

    // Construindo matriz Cone 5x5 dinamicamente (condicionais + loops)
    for (int i = 0; i < HAB; i++) {
        for (int j = 0; j < HAB; j++) {
            if (j >= (2 - i) && j <= (2 + i)) // expansão em V invertido até o meio
                cone[i][j] = 1;
            else
                cone[i][j] = 0;
        }
    }

    // Construindo matriz Cruz 5x5
    for (int i = 0; i < HAB; i++) {
        for (int j = 0; j < HAB; j++) {
            if (i == 2 || j == 2)
                cruz[i][j] = 1;
            else
                cruz[i][j] = 0;
        }
    }

    // Construindo matriz Octaedro (losango 5x5)
    for (int i = 0; i < HAB; i++) {
        for (int j = 0; j < HAB; j++) {
            if (abs(i - 2) + abs(j - 2) <= 2)
                octaedro[i][j] = 1;
            else
                octaedro[i][j] = 0;
        }
    }

    // Pontos de origem no tabuleiro
    int origemConeX = 2, origemConeY = 2;
    int origemCruzX = 5, origemCruzY = 5;
    int origemOctX = 7, origemOctY = 2;

    // Função de sobreposição (dentro do int main mesmo conforme nível)
    // Cone
    for (int i = 0; i < HAB; i++) {
        for (int j = 0; j < HAB; j++) {
            int x = origemConeX + (i - 2);
            int y = origemConeY + (j - 2);

            if (x >= 0 && x < TAM && y >= 0 && y < TAM && cone[i][j] == 1)
                if (tabuleiro[x][y] != 3) tabuleiro[x][y] = 5;
        }
    }

    // Cruz
    for (int i = 0; i < HAB; i++) {
        for (int j = 0; j < HAB; j++) {
            int x = origemCruzX + (i - 2);
            int y = origemCruzY + (j - 2);

            if (x >= 0 && x < TAM && y >= 0 && y < TAM && cruz[i][j] == 1)
                if (tabuleiro[x][y] != 3) tabuleiro[x][y] = 5;
        }
    }

    // Octaedro
    for (int i = 0; i < HAB; i++) {
        for (int j = 0; j < HAB; j++) {
            int x = origemOctX + (i - 2);
            int y = origemOctY + (j - 2);

            if (x >= 0 && x < TAM && y >= 0 && y < TAM && octaedro[i][j] == 1)
                if (tabuleiro[x][y] != 3) tabuleiro[x][y] = 5;
        }
    }

    printf("\nTABULEIRO COM HABILIDADES:\n\n");
    imprimirTabuleiro(tabuleiro);

    return 0;
}
